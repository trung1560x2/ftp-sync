FTP_HOST=your_ftp_host
FTP_USER=your_username
FTP_PASSWORD=your_password
FTP_SECURE=false
# Port mặc định 21
FTP_PORT=21

# Thư mục trên FTP server để đồng bộ (ví dụ: /public_html)
REMOTE_ROOT=/public_html

# Thư mục local cần đồng bộ (để trống sẽ dùng thư mục hiện tại)
LOCAL_ROOT=./sync_folder

# Chế độ đồng bộ: 'upload_only', 'download_only', 'bi_directional'
SYNC_MODE=bi_directional

# Khoảng thời gian quét đồng bộ (cho mode download/bi-directional) tính bằng giây
SYNC_INTERVAL=60
